<p id="notice"><%= notice %></p>

<h1>Banks</h1>
<span>Total <%= Bank.count %></span>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Nbin</th>
      <th>Ifsc prefix</th>
      <th>Bank type</th>
      <th>P2a</th>
      <th>Default ifsc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.id %></td>
        <td><%= bank.name %></td>
        <td><%= bank.nbin %></td>
        <td><%= bank.ifsc_prefix %></td>
        <td><%= bank.bank_type %></td>
        <td><%= bank.p2a ? 'YES' : 'NO' %></td>
        <td><%= bank.default_ifsc %></td>
        <td><%= link_to 'Show', bank %></td>
        <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
        <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bank', new_bank_path %>
